<h1>Sign in</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'errormsg' %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit "アカウント登録" %>

<% end %>